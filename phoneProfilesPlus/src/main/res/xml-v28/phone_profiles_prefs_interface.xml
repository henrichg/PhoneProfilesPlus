<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:key="applicationInterfaceCategory"
    app:title="@string/phone_profiles_pref_category_gui">

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/phone_profiles_pref_applicationTheme"
        app:summary="@string/phone_profiles_pref_applicationTheme_nightMode"
        app:key="applicationTheme"
        app:defaultValue="@string/array_pref_value_nightMode"
        app:ppEntries="@array/themeArray"
        app:ppEntryValues="@array/themeValues"
        app:layout="@layout/mp_preference_material_widget" />

    <sk.henrichg.phoneprofilesplus.RestartEventsIconColorChooserPreference
        app:title="@string/phone_profiles_pref_applicationRestartEventsIconColor"
        app:key="applicationRestartEventsIconColor"
        app:defaultValue="-1"
        app:layout="@layout/mp_preference_material_widget" />

<!--    <SwitchPreferenceCompat-->
<!--        app:key="applicationIncreaseBrightnessForProfileIcon"-->
<!--        app:title="@string/phone_profiles_pref_applicationIncreaseBrightnessForProfileIcon"-->
<!--        app:defaultValue="false"-->
<!--        app:layout="@layout/mp_preference_material_widget" />-->

    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/phone_profiles_pref_applicationHomeLauncher"
        app:summary="@string/array_pref_launcher_activator"
        app:key="applicationHomeLauncher"
        app:defaultValue="@string/activator_string"
        app:ppEntries="@array/launcherArray"
        app:ppEntryValues="@array/launcherValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/phone_profiles_pref_applicationWidgetLauncher"
        app:summary="@string/array_pref_launcher_activator"
        app:key="applicationWidgetLauncher"
        app:defaultValue="@string/activator_string"
        app:ppEntries="@array/launcherArray"
        app:ppEntryValues="@array/launcherValues"
        app:layout="@layout/mp_preference_material_widget" />
    <sk.henrichg.phoneprofilesplus.PPListPreference
        app:title="@string/phone_profiles_pref_notificationLauncher"
        app:summary="@string/array_pref_launcher_activator"
        app:key="applicationNotificationLauncher"
        app:defaultValue="@string/activator_string"
        app:ppEntries="@array/launcherArray"
        app:ppEntryValues="@array/launcherValues"
        app:layout="@layout/mp_preference_material_widget" />

</androidx.preference.PreferenceScreen>