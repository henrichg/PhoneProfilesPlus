<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_prof_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/act_prof_list_item_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="7dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/profile_preferences_profileIcon"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default" />

    <sk.henrichg.phoneprofilesplus.UnderlinedTextView
        android:id="@+id/act_prof_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/act_prof_list_item_profile_icon"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/profile_name_default"
        android:textSize="15sp"
        android:maxLines="1"/>

    <ImageView
        android:id="@+id/act_prof_list_profile_pref_indicator"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_below="@+id/act_prof_list_item_profile_name"
        android:layout_toEndOf="@+id/act_prof_list_item_profile_icon"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:scaleType="@integer/profilePrefIndicatorScaleType"
        android:src="@drawable/ic_profile_pref_volume_on"
        android:paddingStart="10dp"
        android:paddingEnd="10dp" />

</RelativeLayout>

