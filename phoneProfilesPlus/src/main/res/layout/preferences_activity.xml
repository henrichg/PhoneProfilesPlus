<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/preferences_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/preferences_activity_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="?attr/toolbarTheme"
        app:popupTheme="?attr/toolbarPopupMenu"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="72dp"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:elevation="1dp"
        tools:ignore="UnusedAttribute" />

    <FrameLayout
        android:id="@+id/preferences_activity_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/preferences_activity_toolbar">

    </FrameLayout>

</RelativeLayout>