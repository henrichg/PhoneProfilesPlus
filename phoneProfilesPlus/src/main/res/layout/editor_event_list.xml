<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_events_list_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:animateLayoutChanges="true">

    <RelativeLayout
        android:id="@+id/activated_profile_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="5dp"
        android:padding="6dp"
        android:layout_alignParentTop="true" >

        <RelativeLayout
            android:id="@+id/activated_profile_header_subgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/activated_profile_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="1dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:adjustViewBounds="true"
                android:contentDescription="@string/profile_preferences_profileIcon"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_empty" />

            <LinearLayout
                android:id="@+id/activated_profile_icon_liLa1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="-1dp"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/activated_profile_icon" >

                <TextView
                    android:id="@+id/activated_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="@string/empty_string"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="?attr/colorAccent" />

                <ImageView
                    android:id="@+id/activated_profile_pref_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:layout_marginTop="2dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/empty_string"
                    android:scaleType="@integer/profilePrefIndicatorScaleType"
                    android:src="@drawable/ic_empty"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/activated_profile_red_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_below="@id/activated_profile_header_subgroup"
            android:text="@string/event_preferences_red_texts_in_header"
            android:textColor="@color/error_in_preferences"
            android:visibility="gone"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/editor_events_list_frLa1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activated_profile_header"
        android:layout_above="@id/editor_list_bottom_bar" >

        <View
            android:id="@+id/editor_events_list_divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="top"
            android:background="?attr/dialogDivider" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/editor_events_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="3dp"
            android:paddingBottom="5dp"
            android:clipToPadding="false"
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideOverlay" />

        <TextView
            android:id="@+id/editor_events_list_empty"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="@string/event_list_empty"
            android:gravity="center"
            android:textSize="15sp"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/editor_events_list_linla_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <ProgressBar
                android:id="@+id/editor_events_list_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <View
            android:id="@+id/editor_events_list_divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="?attr/dialogDivider"
            android:layout_gravity="bottom" />

    </FrameLayout>

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/editor_list_bottom_bar"
        android:layout_height="48dp"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="?attr/colorPrimary"
        android:theme="?attr/bottomToolbarTheme"
        app:popupTheme="?attr/toolbarPopupMenu" >

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/editor_list_bottom_bar_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-3dp"
            android:entries="@array/emptyArray"
            android:popupElevation="0dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined" />

        <!--
        <LinearLayout
            android:id="@+id/editor_list_bottom_bar_order_root"
