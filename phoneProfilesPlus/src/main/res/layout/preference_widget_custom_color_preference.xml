<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dialog_color_chooser_pref_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_color_chooser_pref_background_preview"
        android:layout_width="@dimen/acch_shape_preference_width"
        android:layout_height="@dimen/acch_shape_preference_width"
        android:layout_gravity="center"
        tools:ignore="ContentDescription"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/dialog_color_chooser_pref_color_preview"
        android:layout_margin="6dp"
        android:layout_gravity="center"
        android:scaleType="fitCenter"
        android:layout_width="@dimen/acch_shape_preference_width"
        android:layout_height="@dimen/acch_shape_preference_width"
        android:src="@drawable/acch_circle"
        android:contentDescription="@string/preference_widget_color_chooser_icon"/>

</FrameLayout>