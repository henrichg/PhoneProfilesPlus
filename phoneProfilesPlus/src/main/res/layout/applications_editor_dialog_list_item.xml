<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="53dp" >

    <RadioButton
        android:id="@+id/applications_editor_dialog_item_radiobutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:checked="false"
        android:focusable="false" />

    <ImageView
        android:id="@+id/applications_editor_dialog_item_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:layout_toEndOf="@id/applications_editor_dialog_item_radiobutton"
        android:contentDescription="@string/applications_editor_dialog_item_icon"
        android:padding="3dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/applications_editor_dialog_item_icon" >

        <TextView
            android:id="@+id/applications_editor_dialog_item_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_string"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/applications_editor_dialog_item_app_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/empty_string"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textStyle="italic"
            android:maxLines="1"/>

    </LinearLayout>

</RelativeLayout>
