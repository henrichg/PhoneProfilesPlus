<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="horizontal" 
    android:background="?attr/cardShape" >

    <ImageView
        android:id="@+id/shortcut_list_item_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:maxHeight="40dp"
        android:maxWidth="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/shortcut_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/shortcut_list_item_profile_icon"
        android:paddingLeft="10dp"
        android:text="@string/profile_name_default"
        android:textSize="15sp"
        android:singleLine="true" />
    
    <ImageView
        android:id="@+id/shortcut_list_profile_pref_indicator"
        android:layout_width="200dp"
        android:layout_height="15dp"
        android:layout_below="@+id/shortcut_list_item_profile_name"
        android:layout_toRightOf="@+id/shortcut_list_item_profile_icon"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:scaleType="fitStart"
        android:src="@drawable/ic_profile_pref_volume_on"
        android:paddingLeft="10dp" />
    
        
</RelativeLayout>

