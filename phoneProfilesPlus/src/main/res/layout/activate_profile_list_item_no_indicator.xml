<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/act_prof_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/act_prof_list_item_profile_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/empty_string"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/act_prof_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/act_prof_list_item_profile_icon"
        android:paddingLeft="10dp"
        android:text="@string/profile_name_default"
        android:textSize="19sp"
        android:singleLine="true" />
    
</RelativeLayout>

