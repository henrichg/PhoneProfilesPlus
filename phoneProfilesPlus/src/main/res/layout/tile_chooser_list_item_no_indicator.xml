<?xml version="1.0" encoding="utf-8"?>
<!--  Single List Item Design -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tile_chooser_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/tile_chooser_list_item_profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/profile_preferences_profileIcon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default" />

    <TextView
        android:id="@+id/tile_chooser_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tile_chooser_list_item_profile_icon"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="@string/profile_name_default"
        android:textSize="15sp"
        android:ellipsize="end"
        android:maxLines="1"/>
    
</RelativeLayout>

