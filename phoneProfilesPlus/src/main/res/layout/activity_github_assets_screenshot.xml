<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/github_assets_screenshot_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/activity_margin_start"
    android:layout_marginEnd="@dimen/activity_margin_end"
    android:padding="15dp" >

    <ScrollView
        android:id="@+id/github_assets_screenshot_activity_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarStyle="outsideOverlay"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/github_assets_screenshot_activity_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:text="@string/github_assets_screenshot_text"/>

            <ImageView
                android:id="@+id/github_assets_screenshot_activity_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_empty"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:contentDescription="@string/github_assets_screenshot_label" />

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/github_assets_screenshot_activity_liLa2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <View
            android:id="@+id/github_assets_screenshot_activity_divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_height"
            android:layout_marginTop="20dp"
            android:background="@color/dialog_divider" />

        <Button
            android:id="@+id/github_assets_screenshot_activity_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:minHeight="40dp"
            android:textColor="@color/action_button_text_color"
            android:textStyle="bold"
            android:background="@drawable/pp_button_background_selector"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/donation_activity_close"
            style="?android:attr/borderlessButtonStyle"/>

    </LinearLayout>

</RelativeLayout>