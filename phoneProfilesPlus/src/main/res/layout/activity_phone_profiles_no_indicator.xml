<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_phone_profiles_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/activityPopupBackground" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="?attr/headerCardShape"
        android:orientation="vertical"
        android:padding="5dp" >
    
		<RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="55dp"
		    android:orientation="horizontal"
		    android:padding="1dp" >
		
		    <ImageView
		        android:id="@+id/activated_profile_icon"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_centerVertical="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="50dp"
		        android:maxWidth="50dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_default" />
		    
		    <TextView
		        android:id="@+id/activated_profile_name"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_marginLeft="3dp"
		        android:layout_toRightOf="@+id/activated_profile_icon"
		        android:paddingLeft="10dp"
		        android:text="@string/profile_name_default"
		        android:textSize="19sp"
		        android:singleLine="true" />
		
		    <ImageView
		        android:id="@+id/activated_profile_activated"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentTop="true"
		        android:layout_alignParentRight="true"
		        android:adjustViewBounds="true"
		        android:contentDescription="@string/empty_string"
		        android:maxHeight="20dp"
		        android:maxWidth="20dp"
		        android:scaleType="centerCrop"
		        android:src="@drawable/ic_profile_activated" />
		    
		</RelativeLayout>
		
	</LinearLayout>		
    
    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/main_profiles_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@android:color/transparent" 
        android:padding="10dip"
        android:dividerHeight="5dp"
        android:listSelector="?attr/cardSelector"
        android:drawSelectorOnTop="true"
	    android:clipToPadding="false"
    	android:scrollbarStyle="outsideOverlay"
        dslv:drag_enabled="true"
	    dslv:collapsed_height="2dp"
	    dslv:drag_scroll_start="0.33"
	    dslv:max_drag_scroll_speed="0.5"
	    dslv:float_background_color="#00000000"
	    dslv:float_alpha="0.6"
	    dslv:slide_shuffle_speed="0.3"
	    dslv:track_drag_sort="false"
	    dslv:use_default_controller="true"
	    dslv:drag_handle_id="@+id/main_list_drag_handle"
	    dslv:sort_enabled="true"
	    dslv:remove_enabled="false"
	    dslv:drag_start_mode="onMove"
	    dslv:remove_mode="flingRemove" />

</LinearLayout>