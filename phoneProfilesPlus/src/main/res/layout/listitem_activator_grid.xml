<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/act_prof_list_item_root"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp"
    android:paddingTop="@dimen/listItem_profileGrid_paddingTop_height"
    android:paddingBottom="0dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/act_prof_list_item_profile_icon"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default"
        android:contentDescription="@string/profile_preferences_profileIcon"/>

    <!-- space between icon and name - useful for multiline profile name -->
<!--    <FrameLayout-->
<!--        android:id="@+id/act_prof_list_item_space"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="0dp"-->
<!--        android:layout_weight="1"/>-->

    <TextView
        android:id="@+id/act_prof_list_item_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_gravity="center_horizontal"
        android:minLines="1"
        android:maxLines="2"
        android:text="@string/profile_name_default"
        android:textSize="12sp"
        android:gravity="center_horizontal"
        tools:ignore="SpUsage" />
<!--    android:fontFamily="sans-serif-condensed"-->

</LinearLayout>

