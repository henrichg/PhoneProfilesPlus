<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_profile_list_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/widget_profile_list_item_profile_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/profile_preferences_profileIcon"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_profile_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/widget_profile_list_item_profile_icon" >

        <TextView
            android:id="@+id/widget_profile_list_item_profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:text="@string/profile_name_default"
            android:textSize="15sp"
            android:textColor="#ffffffff"/>

        <ImageView
            android:id="@+id/widget_profile_list_profile_pref_indicator"
            android:layout_width="match_parent"
            android:layout_height="14dp"
            android:layout_marginTop="2dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/empty_string"
            android:scaleType="@integer/profilePrefIndicatorScaleType"
            android:src="@drawable/ic_profile_pref_volume_on"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

    </LinearLayout>
        
</RelativeLayout>

