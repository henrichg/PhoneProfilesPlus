<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shortcut_creator_activity_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/dialog_activity_button_marginBottom"
    android:orientation="vertical">
<!--    android:paddingTop="@dimen/dialog_title_divider_paddingTop"-->

    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="@dimen/single_selection_title_paddingTop">

        <TextView
            android:id="@+id/custom_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/single_selection_title_text_size"
            android:textColor="@color/dialogTitleTextColor"
            android:text="@string/title_activity_shortcut_creator" />
        <!--    android:textStyle="bold"-->

    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/shortcut_creator_list"
        android:name="sk.henrichg.phoneprofilesplus.ShortcutCreatorListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShortcutCreatorActivity" />

</LinearLayout>