    <style name="NavDrawer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/naw_drawer_margin_offset</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="AlertDialogStyleDark" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorAccent">@color/accent_dark</item>
    </style>
    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/accent</item>
    </style>
    <style name="DialogStyleDark" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/accent_dark</item>
    </style>

</resources>
