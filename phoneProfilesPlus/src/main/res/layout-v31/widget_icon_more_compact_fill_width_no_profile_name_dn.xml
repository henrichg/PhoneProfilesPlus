<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/widget_icon_root"
    android:layout_height="@dimen/icon_widget_height_more_compact"
    android:layout_width="match_parent"
    android:gravity="center"
    android:background="?android:attr/colorBackground"
    android:theme="@style/Theme.Material3.DynamicColors.DayNight"
    tools:ignore="Overdraw" >

    <ImageView
        android:id="@+id/widget_icon_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_widget_background_5"
        android:tint="?android:attr/colorBackground"
        android:visibility="gone"
        tools:ignore="ContentDescription,UseAppTint" />

    <RelativeLayout
        android:id="@+id/icon_widget_relLa1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/widget_ripple_background" >

        <ImageView
            android:id="@+id/icon_widget_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_profile_default"
            android:contentDescription="@string/profile_preferences_profileIcon"/>

    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_icon_not_rounded_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/not_rounded_widget_border"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/widget_icon_rounded_border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:scaleType="fitXY"
        android:src="@drawable/rounded_widget_border_5"
        android:tint="?android:attr/textColorSecondary"
        android:visibility="gone"
        tools:ignore="ContentDescription,UseAppTint" />

</FrameLayout>